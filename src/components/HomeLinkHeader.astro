---
import { Icon } from "astro-icon/components";

type Props = {
  title?: string;
  link: string;
  icon?: string;
  newTab?: boolean;
};

const {
  title = "Homepage",
  link,
  icon = "ri:home-smile-fill",
  newTab = false,
} = Astro.props as Props;
---

<nav class="not-prose flex items-center justify-start">
  <a
    href={link}
    class="inline-flex items-center gap-2 rounded-full px-3 py-1.5 text-base font-medium leading-none text-zinc-500 transition-colors hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-zinc-100"
    target={newTab ? "_blank" : undefined}
    rel={newTab ? "noopener noreferrer" : undefined}
  >
    {icon && <Icon name={icon} class="h-7 w-7" aria-hidden="true" />}
    <span>{title}</span>
  </a>
</nav>
