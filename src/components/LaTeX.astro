---
import katex from "katex";
import { katexMacros } from "../lib/katexMacros";

interface Props {
  formula: string;
  inline?: boolean;
}

const { formula, inline = false } = Astro.props;
const html = katex.renderToString(formula, {
  throwOnError: false,
  macros: katexMacros,
});
---

{
  inline ? (
    <span set:html={html} />
  ) : (
    <div class="text-center">
      <span set:html={html} />
    </div>
  )
}
