---
interface Props {
  title: string;
  color?: string;
}

const { title, color = "#2563eb" } = Astro.props as Props;
const HEX_COLOR_REGEX = /^#([0-9a-f]{3}|[0-9a-f]{6})$/i;
const fallbackColor = HEX_COLOR_REGEX.test(color) ? color : "#2563eb";

const slugify = (value: string) =>
  value
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, "-")
    .replace(/(^-|-$)+/g, "");
const headingId = `math-block-${slugify(title)}`;
---

<section
  class="math-block"
  style={`--math-block-accent: ${fallbackColor};`}
  aria-labelledby={headingId}
>
  <header id={headingId} class="math-block__title">
    {title}
  </header>
  <div class="math-block__content">
    <slot />
  </div>
</section>

<style is:global>
  .math-block {
    border-radius: 0.85rem;
    border: 1px solid color-mix(
      in srgb,
      var(--math-block-accent) 45%,
      rgba(203, 213, 225, 0.65)
    );
    background: rgba(255, 255, 255, 0.985);
    color: inherit;
    padding: 1.2rem 1.5rem 1.2rem 2.4rem;
    margin: 1.75rem 0;
    position: relative;
    box-shadow: 0 12px 36px -30px rgba(37, 99, 235, 0.22);
    transition: border-color 160ms ease, box-shadow 160ms ease,
      background-color 160ms ease, transform 160ms ease;
  }

  .math-block::before {
    content: "";
    position: absolute;
    top: 1rem;
    bottom: 1rem;
    left: 1rem;
    width: 3px;
    border-radius: 999px;
    background: var(--math-block-accent);
    opacity: 0.75;
    pointer-events: none;
  }

  .math-block:hover,
  .math-block:focus-within {
    border-color: color-mix(
      in srgb,
      var(--math-block-accent) 78%,
      rgba(203, 213, 225, 0.6)
    );
    box-shadow: 0 28px 60px -38px rgba(37, 99, 235, 0.3);
    background: rgba(255, 255, 255, 0.99);
    transform: translateY(-1px);
  }

  html.dark:not([data-theme="light"]) .math-block,
  html[data-theme="dark"] .math-block {
    border-color: color-mix(
      in srgb,
      var(--math-block-accent) 45%,
      rgba(148, 163, 184, 0.28)
    );
    background: color-mix(
      in srgb,
      var(--math-block-accent) 18%,
      rgba(15, 23, 42, 0.92)
    );
    box-shadow: 0 18px 42px -32px rgba(4, 15, 45, 0.65);
    transform: none;
  }

  html.dark:not([data-theme="light"]) .math-block:hover,
  html.dark:not([data-theme="light"]) .math-block:focus-within,
  html[data-theme="dark"] .math-block:hover,
  html[data-theme="dark"] .math-block:focus-within {
    background: color-mix(
      in srgb,
      var(--math-block-accent) 24%,
      rgba(15, 23, 42, 0.92)
    );
    border-color: color-mix(
      in srgb,
      var(--math-block-accent) 62%,
      rgba(148, 163, 184, 0.35)
    );
    box-shadow: 0 28px 60px -38px rgba(2, 14, 43, 0.72);
  }

  .math-block__title {
    font-weight: 700;
    font-size: 0.95rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: color-mix(in srgb, var(--math-block-accent) 85%, #0f172a);
    margin: 0 0 0.65rem;
  }

  html.dark:not([data-theme="light"]) .math-block__title,
  html[data-theme="dark"] .math-block__title {
    color: color-mix(in srgb, var(--math-block-accent) 75%, #e2e8f0);
  }

  .math-block__content {
    display: grid;
    gap: 0.75rem;
    font-size: 0.975rem;
    line-height: 1.65;
  }

  .math-block__content :global(p:last-child) {
    margin-bottom: 0;
  }
</style>
